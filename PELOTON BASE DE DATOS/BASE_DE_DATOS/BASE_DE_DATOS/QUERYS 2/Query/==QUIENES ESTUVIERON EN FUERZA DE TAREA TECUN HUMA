==QUIENES ESTUVIERON EN FUERZA DE TAREA TECUN HUMAN=========>>>>>>INF MECANIZADA 
unload to techun.txt
SELECT       per_catalogo, gra_desc_md, arm_desc_md, per_ape1, per_ape2,
             per_nom1, per_nom2, per_desc_empleo, dep_desc_md, pue_desc, per_fec_nomb
FROM         mper, morg, mdep, grados, armas, dpue
WHERE        per_plaza = org_plaza
AND          per_grado = gra_codigo
AND              gra_codigo = pue_grado
AND          per_arma = arm_codigo
AND              arm_codigo = pue_arma
AND             per_catalogo = pue_catalogo
AND             pue_grado = per_grado     
--AND                   pue_fec_nomb = per_fec_nomb
AND          org_dependencia = dep_llave
AND          gra_clase  in (1,2)  
AND          per_situacion in ("11","T0")
and     pue_desc matches  "*AGR.FTIOCC*"
ORDER BY per_grado desc,per_catalogo 
 

