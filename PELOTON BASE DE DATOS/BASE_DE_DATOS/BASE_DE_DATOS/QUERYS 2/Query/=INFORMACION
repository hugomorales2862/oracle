=INFORMACION
select per_catalogo,gra_desc_md,arm_desc_md,per_ape1,per_ape2,
       per_nom1,per_nom2,per_desc_empleo,per_grado
from mper,grados,armas,morg
where per_plaza = org_plaza and      
      arm_codigo = per_arma and
      gra_codigo = per_grado and
      org_dependencia = 1710
order by per_grado desc 


